@model PriceQuotationModel
@{
    ViewBag.Title = "Price Quotation";
}
<header class="bg-success text-white d-flex justify-content-center align-items-center rounded">
    <h1 class="m-4 text-white"><i class="fas fa-money-bill-wave"></i>&nbsp;Price Quotation</h1>
</header>



<form asp-action="Index" method="post" class="form-horizontal">
    <div asp-validation-summary="All"></div>

    <div class="form-group row">
        <label asp-for="Subtotal" class="control-label col-md-2">Subtotal:</label>
        <div class="col-md-5">
            <input asp-for="Subtotal" class="form-control" />
        </div>
        <div class="col-md-5">
            <p class="text-danger">Please enter a sale price.</p>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DiscountPercent" class="control-label col-md-2">Discount percent:</label>
        <div class="col-md-5">
            <input asp-for="DiscountPercent" class="form-control" />
        </div>
        <div class="col-md-5">
            <p class="text-danger">Please enter a discount percent.</p>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DiscountAmount" class="control-label">DiscountAmount:</label>
        <div>
            <label class="form-label">@ViewBag.DA.ToString("C2")</label>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Total:</label>
        <div>
            <label class="form-label">@ViewBag.TT.ToString("C2")</label>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Calculate</button>
            <a asp-action="Index" class="btn btn-success">Clear</a>
        </div>
    </div>

    
</form>
